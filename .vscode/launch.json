    "version": "0.2.0",
    "configurations": [
        {
            "name": "CVCNet-cuda_train",
            "type": "python",
            "cwd": "${workspaceFolder}",
            "request": "launch",
            "program": "src/RDCVC/scripts/train_cvcnet-cuda.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "cvcnet-mtl-mlp_18_2_5_9_64:64:64_32:32:32",
                "cvcnet",
                "--train_path=data/train/rdc_data_cleaned_train.csv",
                "--eval_path=data/test/rdc_data_cleaned_eval.csv",
                "--seed=1234",
                // "--device=cpu",
                "--lr=2e-2",
                "--lr_scheduler",
                "--lrsmin=1e-5",
                "--batch_size=64",
                "--epochs=1000",
                "--save_every=100",
                // "--normalize_target=x",
                // "--normalize_method=zscore",
                "--earlystop",
                "--espatience=100",
                "--LWS=DWA",
                "--DWA_limit=0.1-10",
                "--DWA_weight=1,1",
            ]
        },
        {
            "name": "Python: 当前文件",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
        }
    ]
}